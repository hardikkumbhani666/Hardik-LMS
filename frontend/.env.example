# ============================================================================
# LEAVE MANAGEMENT SYSTEM - Frontend Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# These are frontend-specific environment variables
# ============================================================================

# ============================================================================
# API CONFIGURATION
# ============================================================================
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=30000

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
VITE_APP_NAME=Leave Management System
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# ============================================================================
# FEATURE FLAGS
# ============================================================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_MOCK_DATA=false

# ============================================================================
# AUTHENTICATION
# ============================================================================
VITE_TOKEN_STORAGE_KEY=lms_auth_token
VITE_REFRESH_TOKEN_STORAGE_KEY=lms_refresh_token
VITE_TOKEN_REFRESH_INTERVAL=5400000

# ============================================================================
# UI CONFIGURATION
# ============================================================================
VITE_PAGINATION_SIZE=10
VITE_DATE_FORMAT=yyyy-MM-dd
VITE_TIME_FORMAT=HH:mm:ss

# ============================================================================
# TOAST/NOTIFICATION SETTINGS
# ============================================================================
VITE_TOAST_POSITION=top-right
VITE_TOAST_DURATION=3000

# ============================================================================
# LOGGING
# ============================================================================
VITE_LOG_LEVEL=info

# ============================================================================
# BUILD CONFIGURATION
# ============================================================================
VITE_CHUNK_SIZE_WARNING_LIMIT=1000
