# ============================================================================
# LEAVE MANAGEMENT SYSTEM - Backend Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env file with real credentials!
# ============================================================================

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=5000
NODE_ENV=development

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Local Development
MONGODB_URI=mongodb://localhost:27017/lms

# Cloud MongoDB (Atlas)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lms?retryWrites=true&w=majority

# Database Name
DB_NAME=lms

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_12345
JWT_EXPIRE=1h
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_12345
REFRESH_TOKEN_EXPIRE=7d

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM_EMAIL=noreply@lms.com

# ============================================================================
# AWS S3 CONFIGURATION (Optional - for file uploads)
# ============================================================================
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=your-bucket-name

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_UPLOAD_SIZE_MB=5
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,txt

# ============================================================================
# PAGINATION
# ============================================================================
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# ============================================================================
# SECURITY
# ============================================================================
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=your_session_secret_key_12345
